#!/usr/bin/env bash
#custom 404 page .

sudo apt-get update -y
sudo apt-get install -y nginx
echo "Ceci n'est pas une page" | sudo tee /usr/share/nginx/html/4-not_found_page_404
sudo sed -i '37i error_page 404 /4-not_found_page_404;\nlocation = /4-not_found_page_404 {\nroot /usr/share/nginx/html; \ninternal;\n}\n' /etc/nginx/sites-enabled/default
sudo service nginx restartd